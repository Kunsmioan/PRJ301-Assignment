<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.accesscontrol.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.accesscontrol.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeActionController</servlet-name>
        <servlet-class>controller.employee.EmployeeActionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanLoadPlansController</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanLoadPlansPPDController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanLoadPlansPMController</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanLoadPlansPMController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanCreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlanDeleteController</servlet-name>
        <servlet-class>controller.productionplan.PlanDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductionPlanUpdateController</servlet-name>
        <servlet-class>controller.productionplan.ProductionPlanUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeActionController</servlet-name>
        <url-pattern>/employee/action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanLoadPlansController</servlet-name>
        <url-pattern>/work/productionplan/loadPlansPPD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanLoadPlansPMController</servlet-name>
        <url-pattern>/work/productionplan/loadPlansPM</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <url-pattern>/work/productionplan/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlanDeleteController</servlet-name>
        <url-pattern>/work/productionplan/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductionPlanUpdateController</servlet-name>
        <url-pattern>/work/productionplan/update</url-pattern>
    </servlet-mapping>
</web-app>
